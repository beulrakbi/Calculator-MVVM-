<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        xmlns:view="clr-namespace:Calculator.View"
        xmlns:vm ="clr-namespace:Calculator.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- 상단바 -->
            <RowDefinition Height="*"/>
            <!-- 본문 영역 -->
        </Grid.RowDefinitions>
        <DockPanel Grid.Column="0" Background="White" Height="50" VerticalAlignment="Top">
            <Button Content="☰" Width="50" Background="White" BorderThickness="0"
                    DockPanel.Dock="Left"/>

            <!-- 모드 제목 -->
            <TextBlock Text="표준" 
                       VerticalAlignment="Center" 
                       FontSize="18 "
                       Margin="10,0"/>
        </DockPanel>
            <view:Standard Grid.Row="1"  Grid.Column="0" Margin="0,0,0,0"/>
        <TextBlock Text="기록"
                   Grid.Column="1"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   Margin="10,0"
                   VerticalAlignment="Center"/>
        <view:History Grid.Row="1" Grid.Column="1" DataContext="{Binding History}"/>
        
    </Grid>
</Window>
 
